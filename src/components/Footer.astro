---
const currentYear = new Date().getFullYear();

const socialLinks = [
  { name: 'LinkedIn', href: 'https://www.linkedin.com/in/ching-yu-huang/', icon: 'linkedin' },
  { name: 'GitHub', href: 'https://github.com/Ryan19941212', icon: 'github' },
  { name: 'Email', href: 'mailto:ryan.huang.2027@anderson.ucla.edu', icon: 'email' }
];
---

<!-- Enhanced glass morphism footer with gradient accents -->
<footer class="bg-black/80 backdrop-blur-xl border-t border-white/10 mt-auto relative overflow-hidden">
  <!-- Enhanced gradient background -->
  <div class="absolute inset-0 bg-gradient-to-t from-blue-500/5 via-purple-500/5 to-transparent"></div>
  <div class="absolute bottom-0 left-1/4 w-96 h-96 bg-purple-500/3 rounded-full blur-3xl"></div>

  <div class="max-w-7xl mx-auto py-12 px-6 lg:px-8 relative z-10">
    <!-- Main Content -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
      <!-- Brand Section -->
      <div class="text-center md:text-left">
        <h3 class="text-xl font-bold bg-gradient-to-r from-blue-400 via-purple-400 to-pink-400 bg-clip-text text-transparent mb-2">
          Ryan Huang
        </h3>
        <p class="text-gray-400 text-sm">
          AI Product Manager building the future of construction tech
        </p>
      </div>

      <!-- Quick Links -->
      <div class="text-center">
        <h4 class="text-white font-semibold mb-3 text-sm">Quick Links</h4>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="#about" class="text-gray-400 hover:text-white transition-colors text-sm">About</a>
          <a href="#projects" class="text-gray-400 hover:text-white transition-colors text-sm">Projects</a>
          <a href="#resume" class="text-gray-400 hover:text-white transition-colors text-sm">Resume</a>
          <a href="#contact" class="text-gray-400 hover:text-white transition-colors text-sm">Contact</a>
        </div>
      </div>

      <!-- Social Links -->
      <div class="text-center md:text-right">
        <h4 class="text-white font-semibold mb-3 text-sm">Connect</h4>
        <div class="flex justify-center md:justify-end gap-4">
          {socialLinks.map((link) => (
            <a
              href={link.href}
              target={link.icon !== 'email' ? '_blank' : undefined}
              rel={link.icon !== 'email' ? 'noopener noreferrer' : undefined}
              class="w-10 h-10 rounded-full bg-white/5 hover:bg-white/10 border border-white/10 hover:border-white/20 flex items-center justify-center transition-all duration-300 hover:scale-110 group"
              aria-label={link.name}
            >
              {link.icon === 'linkedin' && (
                <svg class="w-5 h-5 text-gray-400 group-hover:text-white transition-colors" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              )}
              {link.icon === 'github' && (
                <svg class="w-5 h-5 text-gray-400 group-hover:text-white transition-colors" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              )}
              {link.icon === 'email' && (
                <svg class="w-5 h-5 text-gray-400 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-white/10 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-gray-400 text-sm font-medium text-center md:text-left">
          Designed & Built with
          <span class="text-red-400 mx-1">♥</span>
          by
          <span class="bg-gradient-to-r from-blue-400 via-purple-400 to-pink-400 bg-clip-text text-transparent font-bold">
            Ryan Huang
          </span>
        </p>
        <div class="flex items-center gap-4 text-xs text-gray-500">
          <span>&copy; {currentYear} All rights reserved.</span>
          <span class="hidden sm:block">•</span>
          <a
            href="https://astro.build"
            target="_blank"
            rel="noopener noreferrer"
            class="text-blue-400 hover:text-blue-300 font-semibold transition-colors duration-200"
          >
            Built with Astro
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
